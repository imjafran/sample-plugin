  "description": "WP Plugin Boilerplate by Jafran Hasan",
  "main": "src/js/admin.js",
  "scripts": {
    "install": "npm install",
    "tailwind:admin": "npx tailwindcss -i ./src/scss/admin.scss -o ./public/css/admin.css --watch",
    "tailwind:frontend": "npx tailwindcss -i ./src/scss/frontend.scss -o ./public/css/frontend.css --watch",
    "webpack:admin": "npx webpack --config ./webpack.admin.js --watch",
    "webpack:frontend": "npx webpack --config ./webpack.frontend.js  --watch"
