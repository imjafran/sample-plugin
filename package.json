  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.4",
    "tailwindcss": "^2.2.19",
    "vue": "^3.2.23",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  }
